generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Leagues {
  id    Int     @id @default(autoincrement())
  name  String?
  Team Teams[]
}

model Teams {
  id       Int     @id @default(autoincrement())
  league   Leagues @relation(fields: [leagueId], references: [id])
  leagueId Int
  name     String
  players  Int[]
  scores   Int[]
}

model Players {
  id       Int    @id @default(autoincrement())
  teamId   Int
  name     String
  handicap Int?
}

model Scores {
  id       Int    @id @default(autoincrement())
  score    Int
  playerId Int
}

model Courses {
  id       Int    @id @default(autoincrement())
  name     String
  slope    Float
  Rating   Float
}